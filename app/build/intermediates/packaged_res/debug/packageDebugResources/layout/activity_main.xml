<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="@drawable/gradient_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="48dp"
        android:gravity="center"
        android:background="@drawable/gradient_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instagram"
            android:textSize="48sp"
            android:textColor="#FFFFFF"
            android:fontFamily="cursive"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            />
        <!-- Note: For a specific custom font like in the image,
             add the font file to res/font/ and use
             android:fontFamily="@font/your_font_name" -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Where all trendy things which are happening!!!"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="12dp"/>
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Login"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_solid"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Register"
            android:textSize="16sp"
            android:textColor="#405DE6"
            android:background="@drawable/button_border" />

    </LinearLayout>

    </LinearLayout>

